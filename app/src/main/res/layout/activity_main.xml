<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.arthur.instagramclone.MainActivity"
    android:padding="0dp"
    android:background="@drawable/instagrambackground"
    android:id="@+id/relativeLayout">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/logoView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="122dp"
        android:src="@drawable/instagramword" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/unameField"
        android:background="#af35affb"
        android:layout_below="@+id/logoView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:textColor="#afffffff"
        android:hint="username" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pwField"
        android:background="#af35affb"
        android:layout_below="@+id/unameField"
        android:layout_alignStart="@+id/unameField"
        android:layout_marginTop="10dp"
        android:textColor="#afffffff"
        android:hint="password" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Login"
        android:id="@+id/loginB"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/pwField"
        android:layout_centerHorizontal="true"
        android:background="#4bffffff"
        android:onClick="logIn" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Signup"
        android:id="@+id/signupB"
        android:layout_below="@+id/loginB"
        android:layout_alignStart="@+id/loginB"
        android:background="#4bf9f8f8"
        android:layout_marginTop="10dp"
        android:onClick="signUp" />

</RelativeLayout>
